{
  "name": "books-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "NODE_ENV=dev nodemon index.js",
    "test": "npm run test:integration && npm run test:unit && npm run test:contracts",
    "test:converage": "nyc npm test",
    "coveralls": "npm run test:converage && nyc report --reporter=text-lcov | coveralls",
    "test:integration": "NODE_ENV=test mocha --opts test/integration/mocha.opts test/integration/**/*.spec.js",
    "test:unit": "NODE_ENV=test mocha --opts test/unit/mocha.opts test/unit/**/*.spec.js",
    "test:contracts": "NODE_ENV=test mocha --opts test/contracts/mocha.opts test/contracts/**/*.spec.js",
    "lint": "eslint src/*.js config/*.js test/*.js",
    "lint:fix": "npm run lint -- --fix",
    "prepush": "npm run test:converage"
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-converage": true,
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaaomanooel/books-api.git"
  },
  "author": "Jo√£o Manoel Neto <joaaomanooel@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joaaomanooel/books-api/issues"
  },
  "homepage": "https://github.com/joaaomanooel/books-api#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^1.1.1",
    "joi": "^13.3.0",
    "joi-assert": "0.0.3",
    "mocha": "^5.1.1",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "supertest": "^3.0.0",
    "testdouble": "^3.8.1"
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "http-status": "^1.2.0",
    "jwt-simple": "^0.5.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "sequelize": "^4.37.8",
    "sqlite3": "^4.0.2"
  }
}
